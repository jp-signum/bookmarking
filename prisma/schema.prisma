generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model transcript {
  id                         Int                          @id @default(autoincrement())
  interview_name             String?
  transcript_question_answer transcript_question_answer[]
}

model transcript_question_answer {
  id            Int         @id @default(autoincrement())
  transcript_id Int?
  question      String?
  answer        String?
  transcript    transcript? @relation(fields: [transcript_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model BookmarkFolder {
  id        Int       @id @default(autoincrement())
  name      String    @unique //forcing name to be unique to flesh out duplicate folder save bug
  createdAt DateTime  @default(now())
  bookmarks Bookmark[]
}

model Bookmark {
  id          Int       @id @default(autoincrement())
  folderId    Int
  transcriptId Int      
  quoteId      Int     
  createdAt   DateTime   @default(now())

  folder BookmarkFolder @relation(fields: [folderId], references: [id], onDelete: Cascade)
}